- title t('jobs.title')
.stripe.reverse
  .row
    .large-12.columns
      %h1=t('jobs.title')
      %p.lead
        - if @jobs.any?
          =t('jobs.index.description', count: @jobs.count)
        - else
          =t('jobs.index.none')
        %br
        %small #{link_to('Click here', new_member_job_path)} if you would like to post a new job.
  - if @jobs.any?
    .row
      .large-12.columns
        %ul.jobs
          - @jobs.each do |job|
            = render partial: 'job', locals: { job: job }
