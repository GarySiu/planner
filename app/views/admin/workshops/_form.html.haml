= simple_form_for [:admin, @workshop], url: :admin_workshops do |f|
  .row
    .medium-6.columns
      =render partial: 'shared_form', locals: { f: f }
    .medium-6.columns
      =render partial: 'virtual_workshop_fields', locals: { f: f }
  .row
    .large-12.columns
      = f.input :invitable
  .row
    .large-12.columns.text-right
      = f.submit 'Save', class: 'button'
